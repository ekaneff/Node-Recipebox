server {
    listen 80;
    listen [::]:80;

    root /var/www/html/{{project}};

    index index.html index.nginx-debian.html;

    server_name indie.{{ip}}.xip.io;

    location / {
        try_files $uri $uri/ =404;
    }

    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;

    location = /50x.html {
        root /var/www/html;
    }
}